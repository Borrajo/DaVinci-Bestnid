<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
 

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <div class="row clearfix">

        <!-- LOGO -->
        <div class="navbar-header col-md-2 align-right" >
          <a href="/"><img src="http://i.imgur.com/2G1RSzL.jpg" title="Bestnid-Logo" class="img-rounded"/></a>
        </div>

        <!-- BARRA DE BUSQUEDA -->
        <!-- When submit the form, the view rendered will be the index view of our articles resource -->
        <%= form_tag(productos_path, :method => "get", class: "navbar-form", id: "search-form") do %>
        <div class="navbar-header col-md-5" >
          <div class = "input-group col-md-12">
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Busqueda" %>
            <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
              of using a Rails form helper -->
          <span class="input-group-btn"><button class="btn btn-danger" type="submit"><span class="glyphicon glyphicon-search"></span> </button>
          </div>
        </div>
        <% end %>



        <!-- CAMPOS PARA EL LOGIN -->
        <div class="navbar-header col-md-5">
          <!-- Small modal -->
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target=".bs-example-modal-sm">Ingresar</button>

          <!-- Large modal -->
            <button type="button" class="btn btn-danger " data-toggle="modal" data-target=".bs-example-modal-lg">Registrar</button>
            
    </div> <!-- Fin del row -->
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<!-- Modal Login -->
<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="container-fluid">
      <div class="form-group col-md-12">

        <%= render 'users/sessions/login' %>

      </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal Registrarse -->
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="container-fluid">
        <div class="form-group col-md-12">
          <form role="form">
            <fieldset enable>

              <%= render 'users/registrations/registrar' %>
                                     
            </fieldset>
          </form>        
        </div>
      </div>
    </div>
  </div>
</div>
</div>
